{
  "ReRoutes": [
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Account/{url}",
      "DownstreamScheme": "http",
      "ServiceName": "Account",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "UpstreamPathTemplate": "/api/Account/{url}",
      "UpstreamHttpMethod": [
        [ "GET", "POST", "DELETE", "PUT" ]
      ],
      "ReRoutesCaseSensitive": false
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Reward/{url}",
      "DownstreamScheme": "http",
      "ServiceName": "Reward",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "UpstreamPathTemplate": "/api/Reward/{url}",
      "UpstreamHttpMethod": [
        [ "GET", "POST", "DELETE", "PUT" ]
      ],
      "ReRoutesCaseSensitive": false
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/Account/swagger.json",
      "DownstreamScheme": "http",
      "ServiceName": "Account",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "UpstreamPathTemplate": "/Account/swagger.json",
      "UpstreamHttpMethod": [
        [ "GET", "POST", "DELETE", "PUT" ]
      ],
      "ReRoutesCaseSensitive": false
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/Money/swagger.json",
      "DownstreamScheme": "http",
      "ServiceName": "Money",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "UpstreamPathTemplate": "/Money/swagger.json",
      "UpstreamHttpMethod": [
        [ "GET", "POST", "DELETE", "PUT" ]
      ],
      "ReRoutesCaseSensitive": false
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/Reward/swagger.json",
      "DownstreamScheme": "http",
      "ServiceName": "Reward",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "UpstreamPathTemplate": "/Reward/swagger.json",
      "UpstreamHttpMethod": [
        [ "GET", "POST", "DELETE", "PUT" ]
      ],
      "ReRoutesCaseSensitive": false
    }

  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:10000",
    "RequestIdKey": "OcRequestId",
    "ServiceDiscoveryProvider": {
      "Provider": "Consul",
      "Host": "127.0.0.1",
      "Port": 8500,
      "ConfigurationKey": "Ocelot",
      "PollingInterval": 1000
    }
  }
}
